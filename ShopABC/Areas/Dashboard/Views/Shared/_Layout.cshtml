                            <h5 class="modal-title">&nbsp;Đổi mật khẩu</h5>
                            <button type="button" class="close rounded-pill" data-bs-dismiss="modal">
                                <i data-feather="x"></i>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group mb-3">
                                @Html.AntiForgeryToken()
                                @Html.Label("mkcu", "Mật khẩu cũ", new { @class = "form-label mt-3" })<span class="text-danger"> *</span>
                                @Html.Password("mkcu", "", new { @class = "form-control", @autofocus = "" })
                                @Html.Label("mkmoi", "Mật khẩu mới", new { @class = "form-label mt-3" })<span class="text-danger"> *</span>
                                @Html.Password("mkmoi", "", new { @class = "form-control" })
                                @Html.Label("nhaplaimk", "Nhập lại mật khẩu", new { @class = "form-label mt-3" })<span class="text-danger"> *</span>
                                @Html.Password("nhaplaimk", "", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <span class="d-none d-sm-block">Hủy bỏ</span>
                            </button>
                            <button class="btn btn-primary ml-1" data-bs-dismiss="modal" id="btn_DoiMK">
                                <span class="d-none d-sm-block">Thay đổi</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!--End Modal Change Password-->
        </div>
    </div>
    
    <plugins>
        <script>window.history.replaceState && window.history.replaceState(null, null, window.location.href)</script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
        <script src="/assets/Dashboard/js/app.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.2.0/crypto-js.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.js"></script>
        @RenderSection("More_Scripts", required: false)
        <script>
            // Thông báo
            function thong_bao(icon, noi_dung) {
                Swal.fire({
                    icon: icon,
                    title: noi_dung,
                })
            }
            // Xóa mặt nạ loading
            function removeLoadingMarkFull() {
                $('.loading-mask').remove();
            }
            // Hiện mặt nạ loading
            function loadingMarkFull() {
                var html = '<div class="loading-mask" style="width: 100%;height: 100%;top: 0px;left: 0px;z-index: 99999999999999;display: block;background-color: #607d8b2b;position: fixed;bottom: 0px;"><i class="fa fa-spinner fa-pulse fa-3x fa-fw" style="position:absolute;top:10px;left:50%;color:#397FAE;margin-top:20%;margin-left:-45px;font-size:90px;"></i></div>';
                $(html).appendTo(document.body);
            }
            // Băm mật khẩu
            function hash_MK(mat_khau) {
                return CryptoJS.SHA3(mat_khau, { outputLength: 512 }).toString(CryptoJS.enc.Hex);
            }
            $(document).ready(function () {
                // Đổi mật khẩu
                $('#Modal_DoiMatKhau #btn_DoiMK').click(function () {
                    if ($("#mkmoi").val() != $("#nhaplaimk").val()) {
                        alert("Mật khẩu mới và nhập lại không khớp !");
                    }
                    $.ajax({
                        url: '@Url.Action("DoiMatKhau", "TaiKhoan", new {Area = "Dashboard"})',
                        type: "post",
                        beforeSend: function () {
                            loadingMarkFull();
                        },
                        data: {
                            mkcu: hash_MK($("#mkcu").val()),
                            mkmoi: hash_MK($("#mkmoi").val()),
                            __RequestVerificationToken: $("#Modal_DoiMatKhau input[name='__RequestVerificationToken']").val()
                        },
                        success: function (result) {
                            removeLoadingMarkFull();
                            alert(result);
                            location.reload();
                        },
                        error: function (xhr, statusText, error) {
                            removeLoadingMarkFull();
                            var errorMessage = xhr.responseText;
                            alert(errorMessage);
                            $("#Modal_DoiMatKhau").css("display", "block");
                        }
                    });
                });
            });
        </script>
        @if (!string.IsNullOrEmpty(ViewBag.ThongBao))
        {
            <script>
                thong_bao("@Html.Raw(ViewBag.TrangThai)", "@Html.Raw(ViewBag.ThongBao)");
            </script>
        } 
    </plugins>
</body>
